html
  head
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', rel='stylesheet')
    link(rel="shortcut icon" href="")
    link(rel="stylesheet" type="text/css" href="../../css/mystyle.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    script(src="../../js/script.js")
    title= title
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
      .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/weather") Weather App
      .collapse.navbar-collapse
        form.navbar-form.navbar-right.right
          .form-group
            input(placeholder="City, ST")
            button Search
    .container-fluid
      .row.pad
      .row.current-container
        .col-4
        .col-4.current-weather
          .current-details
            .main-name
              h1.title= weather.name
            .main-weather
              button(id="faren" class="") &degF
              button(id="cels" class="") &degC
              .main-icon
                h4.main-description= weather.weather[0].description
              .main-current-temp
                h1.current-temp-text.temp #{weather.main.temp}
            .main-hi-temp
              h4 Hi
              h2.temp #{weather.main.temp_max}
            .main-low-temp
              h4 Low
              h2.temp #{weather.main.temp_min}
          .current-extra
            .extra-container
              - var titles = ['Wind', 'Pressure', 'Humidity', 'Sunrise', 'Sunset']
              - var ids = ['wind', 'pressure', 'humidity', 'sunrise', 'sunset']
              - var data = [weather.wind.speed + ' MPH', weather.main.pressure, weather.main.humidity + ' %', weather.sys.sunrise, weather.sys.sunset]
              - for (i = 0; i < titles.length; i++) {
                .extra-detail
                  .extra-info-title
                    h4= titles[i]
                  .extra-detail-info
                    h3(id=ids[i]).extra-info-text= data[i]
              - }
        .col-4
      .row.days-container
        - for (var day in forecast.list){
          a(href="/weather")
            .item-container
              .day-title
                h4.forecastDay
              .day-details
                .icon-container
                  .icon-img
                  .description
                    h4= forecast.list[day].weather[0].description
                .forecast-day-detail
                  .hi-temp
                    h4 Hi
                    h3.temp #{forecast.list[day].temp.max}
                  .low-temp
                    h4 Low
                    h3.temp #{forecast.list[day].temp.min}
        - }
